    var filteredItems = allItems; // Initialize with all items

    var itemsperpage = window.itemsperpage || {};
    itemsperpage["W2K9V"] = itemsperpage["W2K9V"] || "10";

    var currentpage = window.currentpage || {};
    currentpage["W2K9V"] = currentpage["W2K9V"] || "1";


    var labels = {
        PublishDateLabel: "Published",
        UpdatedDateLabel: "Updated",
        EffectiveDateLabel: "Effective Date"
    };

    updatePage("W2K9V");

    function FSRAPolicyStatementFilter(filterValues, componentId) {
        var selectedYear = filterValues['year'];

        if (selectedYear) {
            filteredItems = allItems.filter(item => {
                var itemYear = new Date(item.PublishDate).getFullYear();
                return itemYear.toString() === selectedYear;
            });
        } else {
            filteredItems = allItems;
        }

        if (filterValues.per_page) {
            itemsperpage[componentId] = filterValues.per_page.toString();
        }
        totalItems = filteredItems.length;
        currentpage[componentId] = "1"; // Reset to the first page after filtering
        updatePage(componentId);
    }


  
        function FSRAPolicyStatementPagination(clickedPage, componentId) {
        currentpage[componentId] = clickedPage;
        updatePage(componentId);

        // Scroll to the filter provider
        var filterProvider = document.getElementById(componentId + "_filterproviderid");
        if (filterProvider) {
            filterProvider.scrollIntoView({ behavior: "smooth", block: "start" });
        }
    }

    function updatePage(componentId) {
        var container = document.getElementById(componentId + "_container");
        var pagination = document.getElementById(componentId + "_pagination");
        var filterprovider = document.getElementById(componentId + "_filterproviderid");

        let startindex = (parseInt(currentpage[componentId], 10) - 1) * parseInt(itemsperpage[componentId]);
        let endindex = startindex + parseInt(itemsperpage[componentId]);


        var panels = container.querySelectorAll('.removable_element');
        panels.forEach(panel => panel.remove());


        for (let i = startindex; i < endindex && i < filteredItems.length; i++) {
            container.appendChild(createFSRAPolicyStatementItem(filteredItems[i]));
        }

        if (pagination) {
            pagination.setAttribute('total-items', totalItems.toString());
            pagination.setAttribute('current-page', currentpage[componentId].toString());
            pagination.setAttribute('items-per-page', itemsperpage[componentId].toString());
            updatePaginationRange(pagination, componentId); 
        }


        if (filterprovider) {
            filterprovider.setAttribute('total-results', totalItems.toString());
            filterprovider.setAttribute('current-page', currentpage[componentId].toString());
            filterprovider.setAttribute('items-per-page', itemsperpage[componentId].toString());
        }
    }



    function updatePaginationRange(pagination, componentId) {
        var startIndex = (parseInt(currentpage[componentId], 10) - 1) * parseInt(itemsperpage[componentId]) + 1;
        var endIndex = Math.min(parseInt(currentpage[componentId], 10) * parseInt(itemsperpage[componentId]), totalItems);

        var rangeDisplay = pagination.querySelector('.pagination-range');
        if (rangeDisplay) {
            rangeDisplay.textContent = `Showing ${startIndex}-${endIndex} of ${totalItems} results`;
        }
    }



    function createFSRAPolicyStatementItem(item) {
        var panel = document.createElement('adgm-expansion-panel');
        panel.classList.add('removable_element');
        panel.setAttribute('type', 'plus');

        var titleAndDateSection = document.createElement('adgm-flex');
        titleAndDateSection.setAttribute('slot', 'title');
        titleAndDateSection.setAttribute('gap', 's4');

        var titleText = document.createElement('adgm-text');
        titleText.setAttribute('variant', 'textM');
        titleText.setAttribute('weight', '400');
        titleText.innerHTML = `<h3>${item.Title}</h3>`;
        //titleText.innerText = `<h3>${item.Title}</h3>`;

        var dateText = document.createElement('adgm-text');
        dateText.setAttribute('variant', 'textXS');
        dateText.setAttribute('italic', '');
        dateText.innerHTML = `${labels.PublishDateLabel} ${item.PublishDate || 'N/A'}, ${labels.UpdatedDateLabel} ${item.UpdatedDate || 'N/A'}`;
        //dateText.innerText = `${labels.PublishDateLabel} ${item.PublishDate || 'N/A'}, ${labels.UpdatedDateLabel} ${item.UpdatedDate || 'N/A'}`;

        titleAndDateSection.appendChild(titleText);
        titleAndDateSection.appendChild(dateText);

        var descriptionAndDateSection = document.createElement('adgm-flex');
        descriptionAndDateSection.setAttribute('gap', 'rBodyXS');

       

       

        if(item.Description != null){

             var descriptionText = document.createElement('adgm-text');
            descriptionText.setAttribute('variant', 'textS');
            descriptionText.innerHTML = `<p>${item.Description}</p>`;
            //descriptionText.innerText = `<p>${item.Description}</p>`;

            descriptionAndDateSection.appendChild(descriptionText);
        }
        
        if (item.EffectiveDate) {
            var effectiveDateText = document.createElement('adgm-text');
            effectiveDateText.setAttribute('variant', 'textXS');
            effectiveDateText.setAttribute('italic', '');
            effectiveDateText.innerHTML = item.EffectiveDate ? `${labels.EffectiveDateLabel} ${item.EffectiveDate}` : '';
            //effectiveDateText.innerText = item.EffectiveDate ? `${labels.EffectiveDateLabel} ${item.EffectiveDate}` : '';
            descriptionAndDateSection.appendChild(effectiveDateText);
        }

        var downloadButton = document.createElement('adgm-link-button');
        downloadButton.setAttribute('reverse', '');
        downloadButton.setAttribute('href', item.DocumentLink);
        downloadButton.setAttribute('variant', 'secondary');
        downloadButton.setAttribute('target', '_blank');
        downloadButton.setAttribute('icon', 'downloadPdf');
        downloadButton.setAttribute('size', 's');
        downloadButton.innerText = item.DocumentLinkText;

        panel.appendChild(titleAndDateSection);
        panel.appendChild(descriptionAndDateSection);
        panel.appendChild(document.createElement('adgm-spacer')).setAttribute('height', 'rBodyM');
        panel.appendChild(downloadButton);

        return panel;
    }

</script>


</div>
            </adgm-tab>
