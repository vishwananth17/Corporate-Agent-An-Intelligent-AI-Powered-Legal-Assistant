    TitleHeadingLabel["c2HaA"] = TitleHeadingLabel["c2HaA"] || "Title ";

    var LanguageHeadingLabel = window.LanguageHeadingLabel || {};
    LanguageHeadingLabel["c2HaA"] = LanguageHeadingLabel["c2HaA"] || "English";

    var LanguageHeadingLabel2 = window.LanguageHeadingLabel2 || {};
    LanguageHeadingLabel2["c2HaA"] = LanguageHeadingLabel2["c2HaA"] || "Arabic";

	// Function to find and update or insert the heading
	function updateOrInsertHeading(ShadowRootElement, text, componentId) {

		const headingDiv = ShadowRootElement.querySelector('adgm-visibility');
		const contentDiv = ShadowRootElement.querySelector('.content');

		if (!tableupdated[componentId]) {
			const hidvis = document.createElement('adgm-visibility')
			hidvis.setAttribute("hide", "m");
			const newHeadingDiv = document.createElement('div');
			newHeadingDiv.className = 'heading';
			newHeadingDiv.textContent = text;

			hidvis.appendChild(newHeadingDiv);
			const cellContent = ShadowRootElement.querySelector('.content');
			const heading = cellContent.querySelector('.heading')
			if (!(cellContent && heading)) {
				cellContent.insertBefore(hidvis, cellContent.firstChild.nextSibling);
			}
		}
	}


	function UpdateCourtList(componentId) {
		const tableElement = document.getElementById(componentId + "_table");

		if (tableElement && tableElement.updateComplete) {
			tableElement.updateComplete.then(() => {
				// Convert HTMLCollection to Array

				const sample = tableElement.querySelectorAll(".removable_element")
				const sampleArray = Array.from(sample);

				if (sampleArray.length > 0) {
					sampleArray.forEach((item, idx) => {
						if (item.updateComplete) {
							item.updateComplete.then(() => {
								const cells = item.querySelectorAll("adgm-table-cell");
								if (cells) {
									cells.forEach((inneritem, cellIndex) => {
										if (inneritem.updateComplete) {
											inneritem.updateComplete.then(() => {
												let shadowRootvariable = inneritem.shadowRoot;

												switch (cellIndex) {
													case 0:
                                                        updateOrInsertHeading(shadowRootvariable, TitleHeadingLabel[componentId], componentId)
														break;
													case 1:
                                                        updateOrInsertHeading(shadowRootvariable, LanguageHeadingLabel[componentId], componentId)
														break;
													case 2:
                                                        updateOrInsertHeading(shadowRootvariable, LanguageHeadingLabel2[componentId], componentId)
														break;
													default:
														break;
												}
											});
										}
									});
								}
							});
						} else {
							console.warn("updateComplete not available for:", item);
						}
					});
				}
			});
		}
	}


	function CourtsrenderSections(componentId) {

		let sections = filtereditems[componentId];

		if (sections && sections.length !== 0) {
			document.getElementById("c2HaA" + "_Message").style.display = "none";
		}
		else {
			document.getElementById("c2HaA" + "_Message").style.display = "block";
		}

		let filterprovider = document.getElementById(componentId + "_filterproviderid")
		let table = document.getElementById(componentId + "_table")
		let paginaton = document.getElementById(componentId + "_pagination")

		if (filterprovider) {
			filterprovider.setAttribute('total-results', sections.length.toString())
			filterprovider.setAttribute('current-page', currentpage[componentId].toString())
			filterprovider.setAttribute('items-per-page', itemsperpage[componentId].toString())
		}

		if (paginaton) {
			paginaton.setAttribute('total-items', sections.length.toString())
			paginaton.setAttribute('current-page', currentpage[componentId].toString())
			paginaton.setAttribute('items-per-page', itemsperpage[componentId].toString())
		}
		if (sections && sections.length == 0) {
			$("#removable_spacer").hide();
			$("#removable_headers").hide();
		} else {
			$("#removable_spacer").show();
			$("#removable_headers").show();
		}

		var removableelements = table?.getElementsByClassName("removable_element");
		for (var i = removableelements.length - 1; i >= 0; i--) {
			removableelements[i].parentNode.removeChild(removableelements[i]);
		}

		let startindex = (parseInt(currentpage[componentId], 10) - 1) * parseInt(itemsperpage[componentId])
		let endindex = (parseInt(currentpage[componentId], 10)) * parseInt(itemsperpage[componentId])

		for (startindex; startindex < sections.length && startindex < endindex; startindex++) {
            table.appendChild(createCourtsItem(sections[startindex], componentId));
		}

        UpdateCourtList(componentId)
		setTimeout(() => {
			tableupdated[componentId] = false
		}, 2000);
	}

    function createCourtsItem(item, componentId) {
        var AlignmentVariation = AlignmentVariation
        var row = document.createElement('adgm-table-row');
        row.classList.add('removable_element');

        // Cell 1: Title or Description
        var cell1 = document.createElement('adgm-table-cell');
        cell1.innerText = item.TitleOrDescription;
        cell1.setAttribute('align', 'left');
        row.appendChild(cell1);

        // Cell 2: English Document Link with Icon
        var cell2 = document.createElement('adgm-table-cell');
        cell2.setAttribute('align', 'left');

        if (item.EnglishDocument && item.EnglishDocumentName) {
            var englishLinkButton = document.createElement('adgm-link-button');
            englishLinkButton.setAttribute('href', item.EnglishDocument);
            englishLinkButton.setAttribute('target', item.LinkTarget);
            englishLinkButton.setAttribute('variant', 'secondary');
            englishLinkButton.setAttribute('icon', item.LinkIcon);
            englishLinkButton.setAttribute('size', 'xs');
            englishLinkButton.setAttribute('inline', '');
            englishLinkButton.setAttribute('reverse', '');
            englishLinkButton.innerText = item.EnglishDocumentName;

            cell2.appendChild(englishLinkButton);
        }
        cell2.setAttribute("class", "table-cell-wrap")
        row.appendChild(cell2);

        // Cell 3: Arabic Document Link with Icon
        var cell3 = document.createElement('adgm-table-cell');
        cell3.setAttribute('align', 'left');

        if (item.ArabicDocument && item.ArabicDocumentName) {
            var arabicLinkButton = document.createElement('adgm-link-button');
            arabicLinkButton.setAttribute('href', item.ArabicDocument);
            arabicLinkButton.setAttribute('target', item.LinkTarget);
            arabicLinkButton.setAttribute('variant', 'secondary');
            arabicLinkButton.setAttribute('icon', item.LinkIcon);
            arabicLinkButton.setAttribute('size', 'xs');
            arabicLinkButton.setAttribute('inline', '');
            arabicLinkButton.setAttribute('reverse', '');
            arabicLinkButton.innerText = item.ArabicDocumentName;

            cell3.appendChild(arabicLinkButton);

        }
        cell3.setAttribute("class", "table-cell-wrap")
        row.appendChild(cell3);

        return row;
    }

    function findPosition(obj) {
        let currentTop = 0;
        if (obj.offsetParent) {
            do {
                currentTop += obj.offsetTop - 80; // Adjust this value (-80) for any additional offset if needed
            } while ((obj = obj.offsetParent));
            return currentTop; // Changed this to return a single value (currentTop) instead of an array
        }
        return 0; // Return 0 if no offsetParent found
    }

    function scrollToPosition(position) {
        window.scrollTo({
            top: position,
            behavior: 'smooth'
        });
    }

    function CourtsListingPagination(clickedpage, componentId) {
        currentpage[componentId] = clickedpage.toString();

        // Perform the scroll action after updating the pagination
        const filterprovider = document.getElementById(componentId + "_filterproviderid");
        if (filterprovider) {
            const targetPosition = findPosition(filterprovider);
            scrollToPosition(targetPosition);
        }

        CourtsrenderSections(componentId);
    }


	function CourtsListingFilter(values, componentId) {

        let tempfiltereditems = JSON.parse(JSON.stringify(CourtsGuidanceItem[componentId]));
		if (values && values.filter && values.filter.query) {
			filtereditems[componentId] = tempfiltereditems.filter(filtereditem => {
                const TitleOrDescription = values.filter.query && filtereditem?.TitleOrDescription
                    ? filtereditem.TitleOrDescription.toLowerCase().includes(values.filter.query.toLowerCase())
					: false;  // Set to false if title is null or undefined

                const EnglishDocumentName = values.filter.query && filtereditem?.EnglishDocumentName
                    ? filtereditem.EnglishDocumentName.includes(values.filter.query)
					: false;  // Set to false if Registrationnumber is null or undefined

                return TitleOrDescription || EnglishDocumentName;
			});
		} else {
			// If no filters are present, return all items
			filtereditems[componentId] = tempfiltereditems;
		}


		if (values && values.filter && values.filter.sort_by) {
			switch (values.filter.sort_by) {
                case "a-z#asc":
                    filtereditems[componentId] = sortCourtsListing(filtereditems[componentId], 'TitleOrDescription', 'asc')
					break;
				case "z-a#desc":
                    filtereditems[componentId] = sortCourtsListing(filtereditems[componentId], 'TitleOrDescription', 'desc')
					break;
				
				default:
                    filtereditems[componentId] = sortCourtsListing(filtereditems[componentId], 'aTitleOrDescriptionz', 'asc')
					break;
			}
		}

		if (values && values.filter && values.filter.per_page) {
			itemsperpage[componentId] = values.filter.per_page.toString();
		}

		currentpage[componentId] = "1";
        CourtsrenderSections(componentId)
	}

    function sortCourtsListing(items, sortBy, order = 'asc') {
		return items.sort((a, b) => {
			let valueA = a[sortBy] ? a[sortBy].toLowerCase() : '';
			let valueB = b[sortBy] ? b[sortBy].toLowerCase() : '';

			let comparison = 0;
			if (valueA > valueB) {
				comparison = 1;
			} else if (valueA < valueB) {
				comparison = -1;
			}
			return order === 'asc' ? comparison : -comparison;
		});
	}

	document.addEventListener('DOMContentLoaded', () => {

		document.getElementById("c2HaA" + "_Message").style.display = "none"

		let values = {
			sort_by: "title#asc",
			per_page: "10"
		}
        CourtsListingFilter(values, "c2HaA");

	});

</script>

</div>
            </adgm-tab>
    </adgm-tab-container>
</span>
	
