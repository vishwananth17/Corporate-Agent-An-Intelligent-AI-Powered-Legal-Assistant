        document.getElementById('totalpricecontainer').innerHTML = returnformattedamount(0);

        var sectionsparentitems = [];
        for (let i = 0; i < calculatoritems["CalculatorSections"].length; i++) {
            for (let j = 0; j < calculatoritems["CalculatorSections"][i].CalculatorSectionParentItems.length; j++) {
                sectionsparentitems.push(calculatoritems["CalculatorSections"][i].CalculatorSectionParentItems[j]);
            }
        }

        function returnformattedamount(amount) {
            let formattedAmount = new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount);
            return formattedAmount;
        }

        function showselecteditems(selectedid) {
            const selectedparent = sectionsparentitems.find(x => x.id === selectedid);
            if (!selectedparent) return;
            document.getElementById('calculatorparenttitle').innerHTML = selectedparent.Title;
            document.getElementById('calculatorparentamount').innerHTML = returnformattedamount(selectedparent.Amount);
            document.getElementById('totalpricecontainer').innerHTML = returnformattedamount(selectedparent.Amount);

            const childitemcontainer = document.getElementById('childrenitemcontainer');
            childitemcontainer.innerHTML = '';
            if (selectedparent.CalculatorSectionsChildItems) {
                selectedparent.CalculatorSectionsChildItems.forEach(childitem => {
                    let listItem = document.createElement('li');
                    listItem.textContent = `${childitem.Title} - ${returnformattedamount(childitem.Amount)}`;
                    childitemcontainer.appendChild(listItem);
                });
            }
        }

        function handleCheckboxChange(event, selectedElement) {
            document.querySelectorAll('adgm-checkbox').forEach(customCheckbox => {
                const shadowRoot = customCheckbox?.shadowRoot;
                if (shadowRoot) {
                    const shadowInput = shadowRoot.querySelector('.container');
                    if (shadowInput && selectedElement !== shadowInput) {
                        shadowInput.querySelector('input').checked = false;
                        shadowInput.classList.remove('--selected');
                    } else if (selectedElement === shadowInput) {
                        selectedElement.querySelector('input').checked = true;
                        selectedElement.classList.add('--selected');
                        showselecteditems(customCheckbox.id);
                    }
                }
            });
            event.stopPropagation();
        }

        function removeselecteditems() {
            console.log('removeselecteditems running');
            document.getElementById('calculatorparenttitle').innerHTML = '';
            document.getElementById('calculatorparentamount').innerHTML = '';
            document.getElementById('totalpricecontainer').innerHTML = returnformattedamount(0);

            const childitemcontainer = document.getElementById('childrenitemcontainer');
            childitemcontainer.innerHTML = '';
        }

        function resetcalculator() {
            console.log('resetcalculator running');
            document.querySelectorAll('adgm-checkbox').forEach(customCheckbox => {
                const shadowRoot = customCheckbox?.shadowRoot;
                if (shadowRoot) {
                    const shadowInput = shadowRoot.querySelector('.container');
                    if (shadowInput) {
                        shadowInput.querySelector('input').checked = false;
                        shadowInput.classList.remove('--selected');
                    }
                }
            });
        }

        const resetButton = document.getElementById('reset_icon');
        console.log('resetButton:', resetButton); //  Confirm button exists

        resetButton?.addEventListener('click', function () {
            console.log('Reset button clicked');
            resetcalculator();
            removeselecteditems();
        });

        document.querySelectorAll('adgm-checkbox').forEach(customCheckbox => {
            const shadowRoot = customCheckbox?.shadowRoot;
            if (shadowRoot) {
                const shadowInput = shadowRoot.querySelector('.container');

                if (shadowInput) {
                    shadowInput.addEventListener('click', (event) => {
                        if (event.target.tagName === 'INPUT') {
                            handleCheckboxChange(event, shadowInput, shadowRoot.id);
                        }
                    });
                }
            }
        });
    });

    function getIconButton() {
        const iconBtn = document.querySelector('.adgm-icon');
        const getIcon = iconBtn?.shadowRoot?.querySelector('adgm-icon');
        const setIcon = getIcon?.shadowRoot;

        const svgString = `<svg viewBox="-1.335 -1.335 64 64" xmlns="http://www.w3.org/2000/svg" id="Button-Refresh-Arrow--Streamline-Ultimate.svg" height="64" width="64">
          <desc>Button Refresh Arrow Streamline Icon: https://streamlinehq.com</desc>
          <path d="M13.53910858333333 37.839843375V50.76565195833333H2.0494441666666665" fill="none" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.67"></path>
          <path d="M13.53910858333333 50.768462916666664C-1.9377724583333331 36.56545708333333 3.7646398333333333 10.934372374999999 23.803195166666665 4.632459333333333C43.8417505 -1.6691981666666664 63.188043458333325 16.084559125 58.626113624999995 36.589478C54.85534079166666 53.538790125 36.42286483333333 62.70200320833332 20.633967416666664 55.47630704166666" fill="none" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.67"></path>
        </svg>`;

        const parser = new DOMParser();
        const svgDoc = parser.parseFromString(svgString, 'image/svg+xml');
        const svgElement = svgDoc.documentElement;

        setIcon?.appendChild(svgElement);

        const getBtn = document.querySelector('.adgm-btn');
        if (!getBtn || !iconBtn) return;

        const isMobile = window.matchMedia('(max-width: 380px)').matches;

        console.log('isMobile:', isMobile);
        if (isMobile) {
            getBtn?.setAttribute('size', 's');
            iconBtn?.setAttribute('size', 's');
        } else {
            getBtn?.setAttribute('size', 'm');
            iconBtn?.setAttribute('size', 'm');
        }
    }

    getIconButton();
    window.addEventListener("resize", getIconButton);
</script>
